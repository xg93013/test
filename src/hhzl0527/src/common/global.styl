.detail_box{
    position relative
    .leftTopCorner{
        content ''
        display block
        border-style solid
        border-color transparent transparent rgba($mainColor, 1) transparent
        border-width 0 25px 25px 25px
        height 0
        width 50px
        position absolute
        margin 20px 0 50px 0
        transform rotate(-45deg)
        top -27px
        left -19px
        &:before{
            content ''
            display block
            position absolute
            top 24px
            left -25px
            width 0
            height 0
            border-style solid
            border-color rgba($mainColor, 1) transparent transparent transparent
            border-width 41px 25px 0 25px
        }
    }

    .detailbox_common{
        $w = 420px
        width $w
        font-size 14px
        padding 20px
        gradientStyle(bottom,rgba(9,43,120,1),rgba(11,12,33,1));
        border 1px solid rgba($mainColor, 1)
        border-radius 4px
        position relative
        .title{
            position relative
            top 0px
            left 0px
            font-size 18px
            font-weight bold
            margin-bottom 12px
        }
        
        .arrow{
            $arrowW = 10px
            position absolute
            display block
            border-top:$arrowW solid rgba($mainColor, 1)
            border-right: $arrowW solid transparent
            border-left: $arrowW solid transparent
            width 0
            height 0
            calcM(top,100%,0px)
            calcM(left,$w/2,$arrowW)
            &:after{
                content ""
                position absolute
                display block
                border-top: ($arrowW - 2px) solid rgba(11,12,33,1)
                border-right: ($arrowW - 2px) solid transparent
                border-left: ($arrowW - 2px) solid transparent
                width 0
                height 0
                top - $arrowW
                left - $arrowW + 2px
                // calcM(top,100%,1px)
                // calcM(left,$w/2,$arrowW-2px)
            }
        }
        
    }
    .marker_detail{
        font-size 14px
        padding 10px
        width 180px
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        gradientStyle(bottom,rgba(9,43,120,1),rgba(11,12,33,1));
        border 1px solid rgba($mainColor, 1)
        border-radius 4px
    }
}

